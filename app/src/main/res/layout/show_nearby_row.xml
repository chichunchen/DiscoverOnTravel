    <TextView
        android:id="@+id/show_name"
        android:layout_width="0px"
        android:layout_height="50dp"
        android:layout_weight="0.5"
        android:padding="4dp"
        android:textColor="@color/color5"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/likeimage"
        android:layout_width="0px"
        android:layout_height="50dp"
