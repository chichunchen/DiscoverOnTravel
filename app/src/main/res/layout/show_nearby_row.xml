        android:paddingTop="10dp"
        android:src="@drawable/fbiconlike" />

    <TextView
        android:id="@+id/show_checkins"
        android:layout_width="0px"
        android:layout_height="50dp"
        android:layout_weight="0.1" />

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="0px"
        android:layout_height="50dp"
        android:layout_weight="0.1" />
</LinearLayout>
