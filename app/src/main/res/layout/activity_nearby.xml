<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="20.8">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.6">

        <fragment
            android:name="com.example.idreams.dot.nearby.NearbyCategoryFragment"
            android:id="@+id/nearby_category_fragment"
            android:layout_weight="1.6"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <fragment
            android:name="com.example.idreams.dot.nearby.ShowNearbyFragment"
            android:id="@+id/show_nearby_fragment"
            android:layout_weight="1.0"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <fragment
        android:name="com.example.idreams.dot.nearby.NearbyScheduleBar"
        android:id="@+id/nearby_shchedule_bar_fragment"
        android:layout_weight="18.2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>